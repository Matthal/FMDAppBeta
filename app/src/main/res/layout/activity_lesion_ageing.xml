<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".LesionAgeing">

    <android.support.v7.widget.Toolbar
        android:id="@+id/basictoolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/MyToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:src="@drawable/logo_white" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/appHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#498F75"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/text_main"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/basictoolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/text_lesion_ageing"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/appHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vesicles"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/ves"
        app:layout_constraintBottom_toTopOf="@id/ves"/>

    <Spinner
        android:id="@+id/ves"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.240"/>

    <Button
        android:id="@+id/vesGallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:text="@string/g_samples"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.900"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.240"/>

    <TextView
        android:id="@+id/text_fib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fibrin"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/fib"
        app:layout_constraintBottom_toTopOf="@id/fib"/>

    <Spinner
        android:id="@+id/fib"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:spinnerMode="dropdown"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.370"/>

    <Button
        android:id="@+id/fibGallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:text="@string/g_samples"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.900"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.370"/>

    <TextView
        android:id="@+id/text_colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/colRed"
        app:layout_constraintBottom_toTopOf="@id/colRed"/>

    <Button
        android:id="@+id/colRed"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textColor="@color/grey"
        android:text="@string/red"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.090"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.490"/>

    <Button
        android:id="@+id/redGallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="@string/g_samples"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.370"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.490"/>

    <Button
        android:id="@+id/colPink"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textColor="@color/grey"
        android:text="@string/pink"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.660"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.490"/>

    <Button
        android:id="@+id/pinkGallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="@string/g_samples"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.960"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.490"/>

    <Button
        android:id="@+id/colWhite"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:textColor="@color/grey"
        android:text="@string/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.370"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.570"/>

    <Button
        android:id="@+id/whiteGallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:text="@string/g_samples"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.660"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.570"/>

    <TextView
        android:id="@+id/text_edges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edges"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/edge"
        app:layout_constraintBottom_toTopOf="@id/edge"/>

    <Spinner
        android:id="@+id/edge"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:spinnerMode="dropdown"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.700"/>

    <TextView
        android:id="@+id/text_heal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heal"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/heal"
        app:layout_constraintBottom_toTopOf="@id/heal"/>

    <Spinner
        android:id="@+id/heal"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:spinnerMode="dropdown"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.900"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.700"/>

    <Switch
        android:id="@+id/locker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/custom_track"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.810" />

    <TextView
        android:id="@+id/grey"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:background="#D9D9D9"
        app:layout_constraintBottom_toTopOf="@id/progbar"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/next_icon"
        app:layout_constraintBottom_toTopOf="@id/progbar"
        app:layout_constraintLeft_toRightOf="@id/qmark"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/next_icon"
        app:layout_constraintBottom_toTopOf="@id/progbar"
        app:layout_constraintRight_toLeftOf="@id/camera" />

    <ImageView
        android:id="@+id/qmark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/qmark_icon"
        app:layout_constraintBottom_toTopOf="@id/progbar"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_above="@id/progbar"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/camera_icon"
        app:layout_constraintBottom_toTopOf="@id/progbar"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        android:id="@+id/progbar"
        layout="@layout/progression_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>