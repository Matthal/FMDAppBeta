<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleTrackFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="Vehicles - more information"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Date (dd/mm/yyyy)"
        android:inputType="date"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="80dp"
        android:text="Category"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Direct contact with animal areas"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="70dp"
        android:textSize="18sp"/>


    <RadioGroup
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="240dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/yes_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yes" />

        <RadioButton
            android:id="@+id/no_chck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="80dp"
        android:text="Amount"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:hint="0"
        android:inputType="number"
        android:layout_marginTop="325dp" />

    <EditText
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Insert notes"
        android:inputType="text"
        android:layout_marginTop="380dp" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:text="Done" />


</FrameLayout>