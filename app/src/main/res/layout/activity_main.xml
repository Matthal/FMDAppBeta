<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="#f2f2f2"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/basictoolbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        style="@style/MyToolbar">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo_white" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/basictoolbar">

        <TextView
            android:id="@+id/appHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#1A7956"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/text_main"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mainHeader"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/appHeader"
            android:background="#498F75"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/header"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainHeader"
            android:background="#D9D9D9"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/welcome"
            android:textSize="16sp" />

        <Button
            android:id="@+id/newFarm"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/listFarm"
            android:layout_alignParentStart="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="-1dp"
            android:text="@string/add_farm"
            android:textAllCaps="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="73dp" />

        <Button
            android:id="@+id/listFarm"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="181dp"
            android:layout_marginEnd="58dp"
            android:layout_marginRight="58dp"
            android:text="@string/pre_farm"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/newFarm"
            android:layout_alignLeft="@+id/newFarm"
            android:layout_alignTop="@+id/diagn"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/bio"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/diagn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newFarm"
            android:layout_alignStart="@+id/listFarm"
            android:layout_alignLeft="@+id/listFarm"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="53dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/diagn"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progbar"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="1dp"
            android:text="Sync"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_above="@id/progbar"
            android:background="#D9D9D9" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/sync"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/qmark_icon" />

        <include android:id="@+id/progbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/progression_bar"/>

    </RelativeLayout>

</RelativeLayout>