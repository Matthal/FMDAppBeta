<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmList">

    <Spinner
        android:id="@+id/farmSpinner"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="51dp" />

    <ExpandableListView
        android:id="@+id/animalList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignStart="@+id/farmSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_alignLeft="@+id/farmSpinner"
        android:layout_above="@+id/newAnimal"/>


    <Button
        android:id="@+id/newAnimal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:text="@string/add_animal" />

    <Button
        android:id="@+id/newTrace"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        android:text="@string/add_tracing" />

    <Button
        android:id="@+id/farmTL"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="258dp"
        android:layout_marginLeft="258dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        android:text="@string/timeline" />

</RelativeLayout>
